{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}